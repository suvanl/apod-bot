{
  "name": "apod-bot",
  "version": "1.2.0",
  "description": "A social media bot that posts NASA's Astronomy Picture of the Day in HD",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "start:debug": "node ./dist/index.js",
    "start": "func start",
    "dev": "nodemon ./src/index.ts",
    "prod-create": "pm2 start dist/index.js --name \"apod-bot\" -- --color && pm2 monit",
    "prod": "pm2 start apod-bot",
    "prod-monit": "pm2 start apod-bot && pm2 monit",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prestart": "npm run build",
    "test": "echo \"Error: no test specified\""
  },
  "keywords": [
    "astronomy",
    "NASA",
    "APOD",
    "social media",
    "Instagram",
    "Twitter",
    "bot"
  ],
  "contributors": [
    {
      "name": "suvanl",
      "url": "https://github.com/suvanl"
    },
    {
      "name": "North3611",
      "url": "https://github.com/North3611"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/cron": "^2.0.1",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0-alpha.7",
    "axios": "^1.4.0",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "common-tags": "^1.8.2",
    "cron": "^2.3.0",
    "fluent-ffmpeg": "^2.1.2",
    "instagram-private-api": "^1.45.3",
    "luxon": "^3.3.0",
    "sharp": "^0.32.1",
    "twitter-api-v2": "^1.12.3",
    "ytdl-core": "^4.11.4"
  }
}
